    "@prisma/client": "^5.20.0",
    "@stripe/react-stripe-js": "^5.4.1",
    "@stripe/stripe-js": "^4.10.0",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.0",
    "lucide-react": "^0.460.0",
    "next": "^14.2.0",
    "next-auth": "^4.24.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-hook-form": "^7.53.0",
    "sharp": "^0.33.0",
    "stripe": "^17.5.0",
    "tailwind-merge": "^2.5.0",
    "zod": "^3.23.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
